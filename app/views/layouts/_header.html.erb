<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, :class => 'navbar-brand' do %>
        <img src="/logo.png" class="retina" />
      <% end %>
    </div>
    <nav class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="<%= (action_name == "home" ? "active" : "") %>"><%= link_to 'Home', root_path  %></li>
        <li class="<%= (%{about officers chapters}.include?(action_name) ? "active" : "") %>"><%= link_to 'About', about_path  %></li>
        <li class="<%= (controller_name == "events" ? "active" : "") %>"><%= link_to 'Upcoming Events', events_path %></li>
        <li class="<%= (%w{get_involved volunteer speaker partner sponsor}.include?(action_name) ? "active" : "") %>"><%= link_to 'Get Involved', get_involved_path %></li>
        <li><%= link_to 'Gallery', 'https://www.facebook.com/DevConPH/photos_stream' %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'DevCon Summit 2017', 'http://summit.devcon.ph', style: "color:#61a400" %></li>
        <% if user_signed_in? %>
          <% if current_user.role? "admin" %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin Pages <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Article Categories', categories_path %></li>
                <li class="<%= (controller_name == "venues" ? "active" : "") %>"><%= link_to 'Venues', venues_path %></li>
              </ul>
            </li>
          <% end %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profile', current_user %></li>
              <li><%= link_to 'Settings', settings_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Sign out', logout_path, :method => :delete %></li>
            </ul>
          </li>
        <% else %>
          <% #<li><%= link_to 'Sign up', new_user_registration_path ></li> %>
          <%#<li><%= link_to 'Sign in', login_path ></li>%>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
